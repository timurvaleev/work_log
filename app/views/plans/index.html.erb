<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "Plans")}", plans_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_plan_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.my", :default => "My")  %> Plans</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th><%= t("activerecord.attributes.plan.date_for", :default => t("activerecord.labels.date_for", :default => "Date")) %></th>
          <th><%= t("activerecord.attributes.plan.actual_log", :default => t("activerecord.labels.actual_log", :default => "Actual log")) %></th>
          <th class="last"><%= t("activerecord.attributes.plan.report_log", :default => t("activerecord.labels.report_log", :default => "Report log")) %></th>
        </tr>
        <% @plans.each do |plan| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= link_to plan.date_for, plan_path(plan) %></td>
          <td><%= pp plan.actual_log %></td>
          <td class="last"><%= pp plan.report_log %></td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

        <%= will_paginate @plans  %>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
